<view id='orderTypeList' class='top-tab-bar'>
  <block wx:for='{{orderTypeList}}' wx:key='code' wx:for-item='orderType' wx:for-index="tabIdx">
    <view data-tab-idx='{{tabIdx}}' bindtap='onSelectType' class='top-tab-option {{currentTab==tabIdx?"active":""}}'>{{orderType.name}}</view>
  </block>
</view>
<view class="container">
  <view class="orders" wx:if="{{orderList}}">
    <navigator url="../orderDetail/orderDetail?id={{item.id}}" class="order" wx:for="{{orderList}}" wx:key="{{item.id}}">
      <view class="h">
        <view class="l">订单编号：{{item.order_sn}}</view>
        <view class="r">{{item.order_status_text}}</view>
      </view>
      <view class="goods" wx:for="{{item.goodsList}}" wx:key="{{gitem.id}}" wx:for-item="gitem">
        <view class="img">
          <image src="{{gitem.list_pic_url}}"></image>
        </view>
        <view class="info">
          <text class="name">{{gitem.goods_name}}</text>
          <text class="number">共{{gitem.number}}件商品</text>
        </view>
        <view class="status"></view>
      </view>
      <view class="b">
        <view class="l">实付：￥{{item.actual_price}}</view>
        <view class="r">
          <button class="btn" data-order-index="{{index}}" catchtap="payOrder" wx:if="{{item.order_status == 0}}">去付款</button>
        </view>
      </view>
    </navigator>
  </view>
  <view class="noOrder" wx:else>
    <view>
      <image class="icon" src="/static/images/noOrder.png"></image>
    </view>
    <view>
      <text>暂无订单~</text>
    </view>
  </view>

  <view wx:if="{{orderList.length>6}}" class="loadmore">
    <block wx:if="{{nomore}}">
      <text>{{nomoreText}}</text>
    </block>
    <block wx:else>
      <text class="iconfont icon-loading loading" space="nbsp"></text>
      <text> {{loadmoreText}}</text>
    </block>
  </view>

</view>